#version 330 core


#define PI 3.14159265f


uniform float time;
uniform sampler2D texture0;
uniform sampler2D texture1;

in vec2 uv;
out vec4 colour;

void main(){
	vec4 fragColour0 = texture(texture0, uv);
	vec4 fragColour1 = texture(texture1, uv + vec2(0.05f*cos(2.f*PI*uv.y + (2.f*PI*24/68)*time), 0.f));
	colour = fragColour0 + 0.25f*fragColour1;
}